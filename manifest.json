{
    "name": "Ed Helper",
    "version": "0.0.1",
    "description": "I hate Python and I love Dirk!",
    "manifest_version": 3,
    "action": {
        "default_icon": "icons/icon32.png",
        "default_title": "Ed Helper"
    },
	"icons": {
		"16": "icons/icon16.png",
		"32": "icons/icon32.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
    "host_permissions": [
        "https://edstem.org/*"
    ],
    "permissions": [
        "activeTab",
        "tabs",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    }
} 